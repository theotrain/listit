

<ul class="nav navbar-nav">
  <li>
    <%= link_to "Listit", root_path, :class => 'brand' %>
  </li>
  <% if logged_in? %>
    <div class='nav_item'>
      <%= link_to 'New To-Do Item', new_item_path, class: 'btn btn-success btn-small' %>
    </div>

  <div class='btn-group nav_item'>
    <%= link_to('', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown') do %>
      <%= current_user.username %>
      <span class='caret'></span>
    <% end %>
    <ul class='dropdown-menu'>
      <li>
        <%= link_to edit_user_path(current_user) do %>
          <i class='icon-pencil'></i>
          edit profile
        <% end %>
      </li>
      <li>
        <%= link_to user_path(current_user) do %>
          <i class='icon-user'></i>
          view profile
        <% end %>
      </li>
      <li>
        <%= link_to logout_path do %>
          <i class='icon-circle-arrow-left'></i>
          logout
        <% end %>
      </li>
    </ul>
  </div>

  <% else #logged out %>
  <div class='nav_item nav navbar-nav'>
      <%= link_to 'Register', register_path, class: 'btn btn-small' %>
    </div>
    <div class='nav_item nav navbar-nav'>
      <%= link_to 'Login', login_path, class: 'btn btn-success btn-small' %>
    </div>
  <% end %>
</ul>
